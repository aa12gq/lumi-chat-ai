{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "strict": true,
    "outDir": "dist-electron",
    "allowJs": true,
    "noEmit": false,
    "isolatedModules": true,
    "types": ["node"]
  },
  "include": ["electron/**/*"]
} 